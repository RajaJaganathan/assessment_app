# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# js, json Formatting
[*.{js,json}]
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{sass,css}]
indent_size = 2
indent_style = space

[{package.json}]
indent_size = 4
indent_style = space
